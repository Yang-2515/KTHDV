@model List<Product>;
@{
    ViewData["Title"] = "Product Page";
    var products = Model;
}

<div class="text-center">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" asp- class="btn btn-info">
                 &nbsp; Create
            </a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Options</th>
        </thead>
        <tbody>
            @foreach (var item in products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.Id" asp-action="Get" asp-controller="Product" class="btn btn-primary mx-2 bg-color-infosuccess bg-color-info-hover">
                                    Update
                                </a>
                                <a asp-route-Id="@item.Id" asp-action="Delete" asp-controller="Product" class="btn btn-danger mx-2 bg-color-pinkdanger bg-color-pinkdanger-hover">
                                    Delete
                                </a>
                            </div>
                    </td>
                </tr>
            }   
        </tbody>
    </table>
</div>
