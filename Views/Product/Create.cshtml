@model List<Category>
@{
    ViewData["Title"] = "CreateProduct";
    var categories = Model;
}
<div class="container">
    <div class="row ">
        <h1 class="text-center text-info">Create Product</h1>
    </div>
    <form asp-controller="Product" asp-action="Save" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label for="Name">Name</label>
            <input class="form-control" id="Name" name="Name">
        </div>
        <div class="mb-3">
            <label for="Price">Price</label>
            <input class="form-control" id="Price" name="Price">
        </div>
        <div class="mb-3">
            <label for="Quantity">Quantity</label>
            <input class="form-control" id="Quantity" name="Quantity">
        </div>
        <div class="mb-3">
            <label for="CategoryId">Category</label>
            <select class="form-control" id="CategoryId" name="CategoryId">
                @foreach (var item in categories){
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="text-center ">
            <div class="w-25 btn-group">
                <input class="btn btn-success mx-2" type="submit" name="submit" value="Save" />
                <a asp-action="Index" asp-controller="Product" class="btn btn-secondary mx-2">
                    <i class="fas fa-edit">Back</i>
                </a>
            </div>
        </div>
    </form>
</div>
